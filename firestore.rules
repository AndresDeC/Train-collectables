rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ** 1. PERMISOS POR APLICACIÓN (appId) **
    // Coincide con la primera parte de la ruta de tu aplicación: artifacts/extension-84b64/...
    match /artifacts/{appId} {

      // PERMISO DE LECTURA PÚBLICA (CATÁLOGO DE TRENES)
      // Ruta: artifacts/{appId}/public/data/{document=**}
      // Permite leer cualquier documento en esta subcolección (incluyendo "Trenes")
      // a CUALQUIER usuario que haya iniciado sesión (request.auth != null), incluyendo anónimos.
      match /public/data/{document=**} {
        allow read: if request.auth != null;
        allow write: if false; 
      }

      // PERMISO DE LECTURA/ESCRITURA PRIVADA (SOLICITUDES DEL USUARIO)
      // Ruta: artifacts/{appId}/users/{userId}/{document=**}
      // Permite leer y escribir SÓLO si el ID del usuario autenticado (request.auth.uid)
      // coincide con el {userId} en la ruta.
      match /users/{userId}/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // ** 2. REGLA DE DENEGACIÓN POR DEFECTO **
    // Niega el acceso a cualquier otra colección fuera de la estructura de la aplicación.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}